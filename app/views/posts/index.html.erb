<h1>Todos mis posts</h1>

<table>
  <tr>
    <th>Title</th>
    <th>Description</th>

    <th></th>
    <th></th>
  </tr>

<% @my_posts.each do |post| %>
  <tr>
    <td><%= link_to post.title, post %></td>
    <td><%= post.description %></td>

    <td><%= link_to 'Edit', edit_post_path(post) %></td>
    <td><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

